{
  "name": "monorepo",
  "private": true,
  "author": "zelin.shao",
  "license": "MIT",
  "scripts": {
    "postinstall": "pnpm run build",
    "build:all": "pnpm run build:all",
    "build:utils": "pnpm -C packages/utils run build",
    "build": "turbo run build",
    "dev:web": "pnpm -C packages/web dev",
    "version": "bump"
  },
  "bump": {
    "changelog": true,
    "publish": false,
    "allowed_branches": [
      "master",
      "main"
    ],
    "mode": "monorepo",
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.10.4",
    "fun-task": "^1.5.2",
    "lodash": "^4.17.15",
    "ramda": "^0.27.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "parcel": "^2.8.3"
  }
}
